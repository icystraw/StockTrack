<Window x:Class="StockTrack.Name"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xml:lang="en-AU"
        Title="Enter Name (or order number)" Height="80" Width="370" WindowStyle="ToolWindow" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" Loaded="Window_Loaded">
    <StackPanel Orientation="Horizontal">
        <TextBox Name="txtInput" Margin="5" Width="180" VerticalAlignment="Center"/>
        <Button Name="btnOK" Content="OK" Margin="5" Width="50" Click="btnOK_Click" IsDefault="True" VerticalAlignment="Center"/>
        <Button Name="btnCancel" Content="Cancel" Margin="5" Width="75" Click="btnCancel_Click" IsCancel="True" VerticalAlignment="Center"/>
    </StackPanel>
</Window>
