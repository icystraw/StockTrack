<Window x:Class="StockTrack.OrderSearch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stock Track (Orders)" Height="660" Width="1000" Background="#FFE1E1E1" Closing="Window_Closing">
    <DockPanel>
        <WrapPanel Margin="3" Orientation="Horizontal" DockPanel.Dock="Top">
            <Label>Order No:</Label>
            <TextBox Name="txtOrderNo" Width="50"></TextBox>
            <Label>Keyword:</Label>
            <TextBox Name="txtKeyword" Width="100"></TextBox>
            <Label>Shipping:</Label>
            <ComboBox Name="cbShipping" IsEditable="True" Width="80">
                <ComboBoxItem>Pick up</ComboBoxItem>
                <ComboBoxItem>Delivery</ComboBoxItem>
                <ComboBoxItem>Pick up on-call</ComboBoxItem>
                <ComboBoxItem>Delivery on-call</ComboBoxItem>
            </ComboBox>
            <Label>Order Date:</Label>
            <DatePicker Name="dtOrderDate1"></DatePicker>
            <Label>to</Label>
            <DatePicker Name="dtOrderDate2"></DatePicker>
            <Label>Is Work Order:</Label>
            <ComboBox Name="cbIsWorkOrder">
                <ComboBoxItem>All</ComboBoxItem>
                <ComboBoxItem IsSelected="True">Yes</ComboBoxItem>
                <ComboBoxItem>No</ComboBoxItem>
            </ComboBox>
            <Button Name="btnSearch" Width="80" Click="btnSearch_Click">Search</Button>
        </WrapPanel>
        <Button Name="btnNormal" DockPanel.Dock="Bottom" Margin="3" Click="btnNormal_Click">Go Normal</Button>
        <DataGrid Name="dgOrders" Margin="3" AutoGenerateColumns="False" HorizontalGridLinesBrush="Gray" VerticalGridLinesBrush="Gray"
                  SelectionUnit="FullRow" CanUserDeleteRows="False" CanUserAddRows="False" MouseDoubleClick="dgOrders_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Order No" IsReadOnly="True" Binding="{Binding Path=OrderNo}"></DataGridTextColumn>
                <DataGridTextColumn Header="Customer Name" IsReadOnly="True" Binding="{Binding Path=CustomerName}"></DataGridTextColumn>
                <DataGridTextColumn Header="Contact No" IsReadOnly="True" Binding="{Binding Path=ContactNo}"></DataGridTextColumn>
                <DataGridTextColumn Header="Shipping" IsReadOnly="True" Binding="{Binding Path=Shipping}"></DataGridTextColumn>
                <DataGridTextColumn Header="Total" IsReadOnly="True" Binding="{Binding Path=TotalAmount}"></DataGridTextColumn>
                <DataGridTextColumn Header="Paid" IsReadOnly="True" Binding="{Binding Path=PaidToday}"></DataGridTextColumn>
                <DataGridTextColumn Header="Balance" IsReadOnly="True" Binding="{Binding Path=Balance}"></DataGridTextColumn>
                <DataGridTextColumn Header="Work Order" IsReadOnly="True" Binding="{Binding Path=IsWorkOrder}"></DataGridTextColumn>
                <DataGridTextColumn Header="Order Date" IsReadOnly="True" Binding="{Binding Path=OrderDate, StringFormat={}{0:d}}"></DataGridTextColumn>
                <DataGridTextColumn Header="Shipping Date" IsReadOnly="True" Binding="{Binding Path=ShippingDate, StringFormat={}{0:d}}"></DataGridTextColumn>
                <DataGridTextColumn Header="Comments" IsReadOnly="True" Binding="{Binding Path=Comments}"></DataGridTextColumn>
            </DataGrid.Columns>
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Command="Copy"></MenuItem>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
    </DockPanel>
</Window>
