<Window x:Class="StockTrack.OrderDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Order Details" Height="690" Width="750" Background="#FFE1E1E1" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" ShowInTaskbar="False" Closing="Window_Closing">
    <DockPanel>
        <StackPanel DockPanel.Dock="Left" Width="150">
            <Label Margin="2">Order Number:</Label>
            <TextBox Margin="2" Name="txtOrderNo"></TextBox>
            <Label Margin="2">Customer Name:</Label>
            <TextBox Margin="2" Name="txtCustomerName"></TextBox>
            <Label Margin="2">Contact Number:</Label>
            <TextBox Margin="2" Name="txtContactNo"></TextBox>
            <Label Margin="2">Shipping Method:</Label>
            <ComboBox Margin="2" Name="cbShipping" IsEditable="True">
                <ComboBoxItem>Pick up</ComboBoxItem>
                <ComboBoxItem>Delivery</ComboBoxItem>
            </ComboBox>
            <Label Margin="2">Total Amount:</Label>
            <TextBox Margin="2" Name="txtTotalAmount" TextChanged="amount_TextChanged"></TextBox>
            <Label Margin="2">Paid Today:</Label>
            <TextBox Margin="2" Name="txtPaidToday" TextChanged="amount_TextChanged"></TextBox>
            <Label Margin="2">Balance:</Label>
            <Label Margin="2" Name="lblBalance">0</Label>
            <CheckBox Margin="2" Name="cbIsWorkOrder">Is Work Order</CheckBox>
            <Label Margin="2">Order Date:</Label>
            <DatePicker Margin="2" Name="dtOrderDate"></DatePicker>
            <Label Margin="2">Shipping Date:</Label>
            <DatePicker Margin="2" Name="dtShippingDate"></DatePicker>
            <Label Margin="2">Comments:</Label>
            <TextBox Margin="2" Name="txtComments" MaxLines="4" AcceptsReturn="True"></TextBox>
        </StackPanel>
        <StackPanel>
            <Label Margin="5">Items in order:</Label>
            <DataGrid Name="dgHistory"
                  Margin="5" AutoGenerateColumns="False" HorizontalGridLinesBrush="Gray" VerticalGridLinesBrush="Gray"
                  SelectionUnit="FullRow" CanUserDeleteRows="False"
                  CanUserAddRows="False" CellEditEnding="dgHistory_CellEditEnding" SelectionChanged="dgHistory_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Date" IsReadOnly="True" Binding="{Binding Path=ActionDate, StringFormat={}{0:d}}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Item" IsReadOnly="True" Binding="{Binding Path=ItemName}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Action" IsReadOnly="True" Binding="{Binding Path=Action}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Net Change" IsReadOnly="True" Binding="{Binding Path=Quantity}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Comments" Binding="{Binding Path=Comments}"></DataGridTextColumn>
                </DataGrid.Columns>
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Name="mnuUndoAction" IsEnabled="False" Header="Undo Action" Click="mnuUndoAction_Click" />
                        <MenuItem Command="Copy"></MenuItem>
                    </ContextMenu>
                </DataGrid.ContextMenu>
            </DataGrid>
            <Label Margin="5">Order progress log:</Label>
            <DataGrid Margin="5"></DataGrid>
            <Button Margin="5" Name="btnDeleteOrder" Content="Delete this order" Click="btnDeleteOrder_Click"></Button>
        </StackPanel>
    </DockPanel>
</Window>
