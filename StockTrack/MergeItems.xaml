<Window x:Class="StockTrack.MergeItems"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StockTrack"
        mc:Ignorable="d"
        Title="Merge Items" Height="240" Width="400" WindowStyle="ToolWindow" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" Background="#FFE1E1E1">
    <StackPanel Orientation="Vertical">
        <Label Margin="5">Which item to merge to?</Label>
        <ComboBox Margin="5" Name="cbItems"></ComboBox>
        <TextBlock Margin="5" TextWrapping="Wrap" Foreground="Red">Please type "merge" into below text box to confirm. Stock Track will not ask for further confirmation.</TextBlock>
        <TextBox Name="txtConfirm" Margin="5"></TextBox>
        <Button Margin="5" Name="btnCancel" Content="Cancel" IsCancel="True" IsDefault="True" Click="btnCancel_Click" />
        <Button Margin="5" Name="btnOK" Content="OK" Click="btnOK_Click" />
    </StackPanel>
</Window>
